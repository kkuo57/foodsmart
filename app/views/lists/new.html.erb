<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h2 class='text-center'>New List</h2>
      <%= form_for [@list.user, @list], :html => {:class => "form-inline"} do |f| %>
        <%= f.text_field :name, class: 'form-control', required: true, placeholder: 'Name' %>
        <%= f.hidden_field :isFavorite, value: false %>

        <%= f.submit "Save", class: "btn btn-success" %>
        <%= link_to 'Back', user_path(@list.user), class: "btn btn-success awk-btn" %>
      <% end %><br>

  </div>
</div>
