<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h2 class='text-center'>Edit List</h2>
      <%= form_for :list, method: :patch, url: {action: 'update'} do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', required: true %>
        <%= f.hidden_field :isFavorite, value: false %>

        <%= f.submit "Save", class: "btn btn-default" %>
      <% end %>

    <%= link_to 'Back', user_path(@list.user), class: "btn btn-success" %>
    <%= link_to 'Delete', @list, method: :delete, data: { confirm: 'Are you sure you want to delete this list? Click OK to continue.' }, class: "btn btn-success" %>
  </div>
</div>