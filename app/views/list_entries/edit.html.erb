<div class="row">
  <div class="col-xs-12 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-4">

    <h2>Edit Item</h2>

    <%= form_for @list_entry do |f| %>
      <% if @list_entry.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(list_entry.errors.count, "error") %> prohibited this list_entry from being saved:</h2>

          <ul>
          <% @list_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      
      <%= f.text_field :quantity, class: 'form-control', required: true, maxlength: 20, id: 'quantity-bar', placeholder: 'Quantity' %>
      <%= form_tag food_path(:id) do %>
        <%= autocomplete_field_tag 'name', '', autocomplete_food_name_foods_path, :size => 20, :id_element => '#list_entry_food_id', required: true, id: 'autocomplete-bar', placeholder: 'Choose Food', class: 'form-control' %><br>
      <%= f.hidden_field :food_id %>
      <%= f.submit 'Save', class: "btn btn-success" %>
      <%= link_to 'Delete', @list_entry, method: :delete, data: { confirm: 'Are you sure you want to delete this item? Click OK to continue.' }, class: "btn btn-success"%>
      <% end %><br>

    <% end %>


    <%= link_to 'Back', user_path(@list_entry.list.user), class: "btn btn-success" %> 
  </div>
</div>
