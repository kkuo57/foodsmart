<%= form_for [list_entry.list, list_entry], class: 'form-inline' do |f| %>
  <div class='form-group'>
    <%= f.text_field :quantity, class: 'form-control', required: true, maxlength: 20, id: 'quantity-bar', placeholder: 'Quantity' %>
  </div>
  <div class='form-group'>
    <%= form_tag food_path(:id) do %>
      <%= autocomplete_field_tag 'name', '', autocomplete_food_name_foods_path, :size => 20, :id_element => '#list_entry_food_id', required: true, id: 'autocomplete-bar', class: 'form-control', placeholder: 'Choose food' %>
      <%= f.hidden_field :food_id %>
      </div>
      <div class='form-group buttons'>
    <%= f.submit 'Add Item', class: "btn btn-success" %>
    <%= link_to 'All Done', user_path(@list_entry.list.user), class: "btn btn-success" %>
    <% end %>
  </div>

<% end %>
