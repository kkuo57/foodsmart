<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-1 col-md-4 col-md-offset-4">
    <h1>An Easy Way to Save All Your Shopping Lists!</h1>
    <div class="col-sm-4 col-sm-offset-4 search-bar">
      <%= form_tag food_path(:id) do %>
        <%= autocomplete_field_tag 'name', '', autocomplete_food_name_foods_path, :size => 10, :id_element => '#food_id' %>
        <input type="hidden" id="food_id">
      <% end %>
    </div>
  </div>
</div>
