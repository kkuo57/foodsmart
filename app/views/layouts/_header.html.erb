<header>
  <div class='container'>
    <div>
      <% if logged_in? %>
        <%= link_to current_user do %>
          <button class='btn btn-success'>
            <span class='glyphicon glyphicon-user' aria-hidden='true'></span> Profile
          </button>
        <% end %>
        <%= link_to logout_path, method: "delete" do %>
          <button class='btn btn-default'>
            <span class='glyphicon glyphicon-log-out' aria-hidden='true'></span> Log Out
          </button>
        <% end %>
      <% else %>
        <div class='before-logged-in'>
          <%= link_to login_path do %>
            <button class='btn btn-success'>
              <span class='glyphicon glyphicon-log-in' aria-hidden='true'></span> Log In
            </button>
          <% end %> 
          <%= link_to new_user_path do %>
            <button class='btn btn-default'>
              <span class='glyphicon glyphicon-plus-sign' aria-hidden='true'></span> Sign Up
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <h1 class='text-center'>
    <%= link_to root_path do %>
      üçé FoodSmart
    <% end %>
  </h1>

  <% flash.each do |name, message| %>
    <% if flash[:success] %>
      <div class="flash text-center bg-success">
        <%= message %>
      </div>
    <% else %>
      <div class="flash text-center bg-error">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="col-sm-4 col-sm-offset-4 search-bar">
    <%= form_tag food_path(:id), class: 'form-inline' do %>
      <%= autocomplete_field_tag 'name', '', autocomplete_food_name_foods_path, :size => 10, :id_element => '#food_id', id: 'autocomplete-bar', placeholder: 'Food Products', class:'form-control'%>
      <input type="hidden" id="food_id">
      <%= submit_tag 'Search', class: "btn btn-success", id: "search-id-button" %>
    <% end %>
  </div>


</header><br>